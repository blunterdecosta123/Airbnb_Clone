<%- include('../partials/head') %>
<body class="min-h-screen bg-gray-100">
  <%- include('../partials/nav') %>
  <main class="py-12 px-4">
    
    <div class="container mx-auto max-w-7xl">
      <h1 class="text-6xl font-bold text-blue-700 mb-16 text-center tracking-tight">All Registered Homes</h1>
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-wrap gap-8 justify-center">
          <% registeredHomes.forEach(home => { %>
            <div class="flex-shrink-0 w-full md:w-96 bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden">
              <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-64 object-cover">
              <div class="p-6">
                <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= home.houseName %></h2>
                <div class="flex items-center mb-4">
                  <span class="ml-2 text-gray-600">⭐ <%= home.rating %>/5</span>
                </div>
                <div class="flex items-center mb-4">
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <span class="ml-2 text-gray-600"><%= home.location %></span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-2xl font-bold text-blue-600">₹<%= home.price %></span>
                </div>
                <div class="flex items-center justify-between">
                <a class=" bg-purple-300 p-4 rounded-full font-mono" href="/homes/<%= home._id %>">Details</a>
                <%- include('../partials/add-to-favourite', {home: home}) %>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
    <!-- <%- include('../partials/footerButton') %> -->
  </main>
</body>
</html>