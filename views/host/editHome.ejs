<%- include('../partials/head') %>
<body class="min-h-screen bg-gray-100">
  <%- include('../partials/nav') %>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-blue-600 mb-8 text-center"><%=editing?"Edit":"Register"%> your Home</h1>
    <div class="flex justify-center">
      <form action="/host/<%=editing?"editHome":"add-home"%>" method="POST" enctype="multipart/form-data" class="w-full max-w-md">
        <input 
          type="hidden" 
          name="id"
          value="<%=editing?home._id:'' %>"
        />
        <input 
          type="text" 
          name="houseName"
          value="<%=editing?home.houseName:'' %>"
          placeholder="Name of your house"
          class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          required
        />
        <input 
          type="text" 
          name="price"
          value="<%=editing?home.price:'' %>"
          placeholder="Price Per Night"
          class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          required
        />
        <input 
          type="text" 
          name="location"
          value="<%=editing?home.location:'' %>"
          placeholder="Location"
          class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          required
        />
        <input 
          type="text" 
          name="rating"
          value="<%=editing?home.rating:'' %>"
          placeholder="Rating"
          class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          required
        />
        <input 
          type="file" 
          name="photo"
          class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          required
        />
        <textarea
          name="description"
          placeholder="Describe your house"
          class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          required
        /><%=editing?home.description:'' %></textarea>
        <div class="flex justify-center">
          <input 
            type="submit" 
            value="<%=editing? "Update Home" : "Add Home" %>"
            class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 cursor-pointer"
          />
        </div>
      </form>
    </div>
  </div>
</body>
</html>